%section.panel.radius.list
  = content_tag :h3, t('running_experiments.label'), class: 'subheader'

  .content
    - if @running_experiments.blank?
      %p= t('.no_experiments')
    - else
      - @running_experiments.each do |experiment|
        %a.button.expand.radius.last-element{ href: experiment_path(experiment.id) }
          - unless current_user.owns?(experiment)
            %i.fi-share
          = t('.link_text', { name: experiment.name, start_time: experiment.start_at.strftime('%Y-%m-%d %H:%M') })
