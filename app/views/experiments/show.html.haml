-#- require "erb"
-# include ERB::Util

- content_for :title, 'Scalarm - monitoring'
- content_for :help, raw(t('help.experiments.monitoring'))

= render 'experiment_links'
= render 'analysis_charts'

- description = Hash["histogram" => "A histogram analysis shows results frequency distributions", "scatter" => "Analysis of two variables relationship creates a scatter plot", "regression" => "The classification of objects by dividing the found set of conditions"]

-#.row(data-equalizer="")
= content_for :panel do
  .nano(style="overflow: hidden;")
    %section.row.panel.radius.nano-content(style="padding-left: 15px; padding-right: 8px;")
      %h3.text-center.subheader
        = t('experiments.menu_panel.experiment_tools')
      .action-button(style="margin-left: 4px; margin-top: 10px;")
        %a.experiment_menu_icon.available_experiments_link(href="#" data-action-url="#{simulations_simulation_scenarios_path}" style="display: block")
          = image_tag "material_design/simulation_scenarios_icon.png"
          = t('experiments.experiment_links.simulation_scenarios')
        %a.experiment_menu_icon.running_experiments_link(href="#" data-action-url="#{running_experiments_experiments_path}" style="display: block")
          = image_tag "material_design/running_experiments_icon.png"
          = t('experiments.experiment_links.running_experiments')
        %a.experiment_menu_icon.completed_experiments_link(href="#" data-action-url="#{completed_experiments_experiments_path}" style="display: block")
          = image_tag "material_design/completed_experiments_icon.png"
          = t('experiments.experiment_links.completed_experiments')
        %a.experiment_menu_icon.historical_experiments_link(href="#" data-action-url="#{historical_experiments_experiments_path}" style="display: block")
          = image_tag "material_design/historical_experiments_icon.png"
          = t('experiments.experiment_links.historical_experiments')
      %hr
      %h3.text-center.subheader
        = t('experiments.menu_panel.experiment')
      %h5.text-center.subheader
        = t('experiments.menu_panel.experiment_management.header')
      .action-button(style="margin-left: 4px; margin-top: 10px;")
        %a.extend_input_space_link(href="#" id="extendinputspace" data-action-url="#" style="display: block; padding-top: 10px;")
          = t('experiments.menu_panel.experiment_management.extend_input_space')
        %a.set_scheduling_method_link(href="#" id="setschedulingmethod" data-action-url="#" style="display: block; padding-top: 10px;")
          %span= t('experiments.menu_panel.experiment_management.set_scheduling_method')
      %h5.text-center.subheader(style="margin-left: 4px; margin-top: 10px; padding-top: 10px;")
        = t('experiments.menu_panel.experiment_result.header')
      .action-button(style="margin-left: 4px; margin-top: 10px; padding-top: 10px;")
        %a.show_progress_link(href="#" id="showprogress" data-action-url="#" style="display: block; padding-top: 5px;")
          = t('experiments.menu_panel.experiment_result.show_progress')
        %a.download_result_link(href="#" id = "downloadresult" data-action-url="#" style="display: block; padding-top: 2px;")
          = t('experiments.menu_panel.experiment_result.download_result.header')
          %ul#download-options(style='display: none')
            %li= link_to t('experiments.menu_panel.experiment_result.download_result.binaries'), results_binaries_experiment_path(@experiment.id)
            %li= link_to t('experiments.menu_panel.experiment_result.download_result.configurations'), file_with_configurations_experiment_path(@experiment.id)

      %h3.text-center.subheader
        = t('experiments.menu_panel.analysis.header')
      %ul.analyses-panel{style: "text-align: left; list-style: none;"}
        %li.histogram-analysis{style: "padding-bottom: 10px;"}
          %a.tip-right.text-left{href:"#method"+t('experiments.menu_panel.analysis.histogram'), "title"=>"<div style=width:65%;float:left;padding-top:10px;>#{description['histogram']}</div><div style=width:35%;float:right;><img src=/assets/material_design/histogram_icon.png/></div>", "data-tooltip"=>"", style:"padding: 0px;"}
            %span= t('experiments.menu_panel.analysis.histogram')
        %li.rtree-analysis{style: "padding-bottom: 10px;"}
          %a.tip-right.text-left{href:"#method"+t('experiments.menu_panel.analysis.regression_tree'), "title"=>"<div style=width:65%;float:left;padding-top:10px;>#{description['regression']}</div><div style=width:35%;float:right;><img src=/assets/material_design/regression_icon.png/></div>", "data-tooltip"=>"", style:"padding: 0px;"}
            %span= t('experiments.menu_panel.analysis.regression_tree')
        %li.bivariate-analysis{style: "padding-bottom: 10px;"}
          %a.tip-right.text-left{href:"#method"+t('experiments.menu_panel.analysis.scatter_plot'), "title"=>"<div style=width:65%;float:left;padding-top:10px;>#{description['scatter']}</div><div style=width:35%;float:right;><img src=/assets/material_design/scatter_icon.png/></div>", "data-tooltip"=>"", style:"padding: 0px;"}
            %span= t('experiments.menu_panel.analysis.scatter_plot')

%section
  %section.row.panel.radius
    = render 'information_panel'

  - if @experiment.is_running
    %section.panel.radius
      %h3.subheader
        Computational resources summary
        = image_tag('loading.gif', id: 'actions-loading-workers')
      = render 'workers_info'

  %section.row.panel.radius.last-element#monitoring_section
    %h3.subheader= t('experiments.show.stats_header')

    .content(style="padding-top: 30px; position: relative;" )


      = render 'monitoring_stats'
      .speedometer{id: "speedometer_#{@experiment.id}"}

      %article#experiment_progress_bar(style="padding-top: 50px; margin-bottom: 40px" )
        %h4.subheader= t('.progress_bar_header')

      = render 'monitoring_actions'

  %section.row.panel.radius.last-element#progressInformationWrapper(style="display: none; margin-top: 50px;")
    = render 'monitoring_table'

  = render 'scheduling_policy_dialog'

- unless @experiment.supervised.nil?
  %section.panel.radius(style="margin-top: 20px;")
    = render 'experiment_result'

