%section.panel.radius.list
  = content_tag :h3, t('simulation_scenario_list.label'), class: 'subheader'

  .content
    - if @simulations.blank?
      .panel.callout.radius
        = content_tag :h4, raw(t('simulation_scenario_list.empty_list')), class: 'subheader'
    - else
      - @simulations.each do |simulation|
        %a.button.expand.radius.last-element(href="#{new_experiment_path(simulation_id: simulation.id)}")
          - if simulation.is_public
            %i.fa.fa-globe(style="font-size: 20px;")
          - elsif simulation.user_id != current_user.id
            %i.fi-share(style="font-size: 20px;")
          = simulation.name
